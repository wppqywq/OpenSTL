{
  "title": "OpenSTL - Spatio-Temporal Predictive Learning",
  "description": "A comprehensive benchmark for spatio-temporal predictive learning, supporting various methods like SimVP, ConvLSTM, PredRNN for video prediction, weather forecasting, and traffic prediction tasks.",
  "type": "serverless",
  "category": "machine-learning",
  "iconUrl": "https://github-production-user-asset-6210df.s3.amazonaws.com/44519745/246222783-fdda535f-e132-4fdd-8871-2408cd29a264.png",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 25,
    "presets": [
      {
        "name": "Quick Training",
        "defaults": {
          "METHOD": "simvp",
          "DATASET": "mmnist",
          "EPOCHS": "10",
          "LEARNING_RATE": "1e-3"
        }
      },
      {
        "name": "Weather Prediction",
        "defaults": {
          "METHOD": "simvp",
          "DATASET": "weather",
          "EPOCHS": "50",
          "LEARNING_RATE": "1e-4"
        }
      },
      {
        "name": "Video Prediction",
        "defaults": {
          "METHOD": "convlstm",
          "DATASET": "kth",
          "EPOCHS": "100",
          "LEARNING_RATE": "1e-3"
        }
      }
    ],
    "env": [
      {
        "key": "METHOD",
        "input": {
          "name": "Model Method",
          "type": "select",
          "description": "Choose the prediction method/model to use",
          "default": "simvp",
          "options": [
            {"value": "simvp", "label": "SimVP - Simple Video Prediction"},
            {"value": "convlstm", "label": "ConvLSTM - Convolutional LSTM"},
            {"value": "predrnn", "label": "PredRNN - Predictive RNN"},
            {"value": "e3dlstm", "label": "E3D-LSTM - 3D Convolutional LSTM"},
            {"value": "tau", "label": "TAU - Temporal Attention Unit"},
            {"value": "mau", "label": "MAU - Memory Augmented Unit"}
          ]
        }
      },
      {
        "key": "DATASET",
        "input": {
          "name": "Dataset",
          "type": "select",
          "description": "Choose the dataset for training/evaluation",
          "default": "mmnist",
          "options": [
            {"value": "mmnist", "label": "Moving MNIST"},
            {"value": "mfmnist", "label": "Moving Fashion-MNIST"},
            {"value": "kth", "label": "KTH Actions"},
            {"value": "weather", "label": "WeatherBench"},
            {"value": "taxibj", "label": "TaxiBJ Traffic"},
            {"value": "human", "label": "Human3.6M"},
            {"value": "bair", "label": "BAIR Robot Pushing"}
          ]
        }
      },
      {
        "key": "EPOCHS",
        "input": {
          "name": "Training Epochs",
          "type": "number",
          "description": "Number of training epochs",
          "default": 50,
          "min": 1,
          "max": 1000
        }
      },
      {
        "key": "LEARNING_RATE",
        "input": {
          "name": "Learning Rate",
          "type": "string",
          "description": "Learning rate for training (e.g., 1e-3, 1e-4)",
          "default": "1e-3"
        }
      },
      {
        "key": "BATCH_SIZE",
        "input": {
          "name": "Batch Size",
          "type": "number",
          "description": "Training batch size",
          "default": 16,
          "min": 1,
          "max": 128
        }
      },
      {
        "key": "EXPERIMENT_NAME",
        "input": {
          "name": "Experiment Name",
          "type": "string",
          "description": "Name for the experiment (used for saving results)",
          "default": "runpod_experiment"
        }
      },
      {
        "key": "MODE",
        "input": {
          "name": "Execution Mode",
          "type": "select",
          "description": "Choose whether to train, test, or both",
          "default": "train",
          "options": [
            {"value": "train", "label": "Training Only"},
            {"value": "test", "label": "Testing Only"},
            {"value": "both", "label": "Train and Test"}
          ]
        }
      }
    ]
  }
} 